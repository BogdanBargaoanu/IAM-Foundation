@{
    ViewData["Title"] = "Home";
    var isHealthy = ViewBag.ServiceHealth as bool? ?? false;
}

<div class="text-center py-5">
    <h1 class="display-3 fw-bold mb-4">Transactions Client</h1>
    <p class="lead text-muted mb-5">
        A demo application showcasing secure API access using OAuth 2.0 Client Credentials flow
    </p>

    <div class="row justify-content-center g-4 mt-4">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="mb-3 d-flex align-items-center justify-content-between">
                        <h3 class="card-title mb-0">Transactions API</h3>
                        <div class="d-flex align-items-center">
                            <span class="badge @(isHealthy ? "bg-success" : "bg-danger") d-flex align-items-center">
                                <span class="status-dot me-2"></span>
                                @(isHealthy ? "Service Online" : "Service Offline")
                            </span>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-controller="Transactions" asp-action="Index" class="btn btn-primary btn-lg">
                            Explore API Demo
                        </a>
                        <a asp-controller="Transactions" asp-action="Transactions" class="btn btn-outline-secondary">
                            View All Transactions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }

    .card:hover {
         transform: translateY(-5px);
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: white;
        display: inline-block;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }
    }

    .badge {
        font-size: 0.875rem;
        padding: 0.5rem 0.75rem;
    }
</style>