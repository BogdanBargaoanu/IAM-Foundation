@{
    ViewData["Title"] = "Home";
    var isAuth = User?.Identity?.IsAuthenticated == true;
}

<div class="py-4">
    <div class="row align-items-center g-4">
        <div class="col-lg-7">
            <h1 class="display-6 mb-3">Welcome</h1>
            <p class="lead mb-4">
                This demo app signs you in with OpenID Connect and shows your user identity, claims, and tokens.
            </p>

            <div class="d-flex gap-2 flex-wrap">
                @if (isAuth)
                {
                    <a class="btn btn-primary" asp-controller="Profile" asp-action="Index">Go to Profile</a>
                    <a class="btn btn-outline-secondary" asp-controller="Profile" asp-action="Logout">Sign out</a>
                }
                else
                {
                    <a class="btn btn-primary" asp-controller="Profile" asp-action="Index">Sign in</a>
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Privacy">Privacy</a>
                }
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h5">Status</h2>
                    <dl class="row mb-0">
                        <dt class="col-4">Signed in</dt>
                        <dd class="col-8">@(isAuth ? "Yes" : "No")</dd>

                        <dt class="col-4">User</dt>
                        <dd class="col-8">@((isAuth ? (User.Identity?.Name ?? "Unknown") : "—"))</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
